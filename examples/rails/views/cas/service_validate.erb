<?xml version="1.0" encoding="UTF-8"?>
<cas:serviceResponse xmlns:cas='http://www.yale.edu/tp/cas'>
<% if !manager.success? %>
  <cas:authenticationSuccess>
    <cas:user><%= manager.service_ticket.username.to_xs %></cas:user>
  </cas:authenticationSuccess>
<% else %>
  <cas:authenticationFailure code="<%= manager.errors.first.error_identifier.to_xs %>">
    <%= manager.errors.first.message.to_xs %>
  </cas:authenticationFailure>
<% end %>
</cas:serviceResponse>
